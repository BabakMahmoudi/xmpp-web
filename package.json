{
  "name": "xmpp-web",
  "version": "0.1.0",
  "description": "Lightweight web chat client for XMPP server",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "buefy": "^0.8.6",
    "bulma": "^0.8.0",
    "core-js": "^3.3.6",
    "fork-awesome": "^1.1.7",
    "node-sass": "^4.13.0",
    "sass-loader": "^8.0.0",
    "stanza": "^12.4.3",
    "vue": "^2.6.10",
    "vue-moment": "^4.0.0",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.5",
    "@vue/cli-plugin-eslint": "^4.0.5",
    "@vue/cli-service": "^4.0.5",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/strongly-recommended",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off",
      "vue/singleline-html-element-content-newline": "off",
      "vue/max-attributes-per-line": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
